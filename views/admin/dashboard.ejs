    }
  
    .notification {
      background-color: #ffffff;
      border: 1px solid #e0e0e0;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      display: flex;
      flex-direction: column;
      transition: transform 0.3s ease, opacity 0.3s ease;
      cursor: pointer;
    }
  
    .notification:hover {
      transform: scale(1.02);
    }
  
    .notification-title {
      font-size: 16px;
      font-weight: bold;
      margin-bottom: 5px;
      color: #333;
    }
  
    .notification-message {
      font-size: 14px;
      color: #666;
      margin-bottom: 10px;
    }
  
    .notification-timestamp {
      font-size: 12px;
      color: #999;
      text-align: right;
    }
  
    .notification-fade-out {
      opacity: 0;
      transform: translateY(-20px);
    }
  </style>
  <!-- Menyertakan script untuk socket.io -->
  <script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
  <script>
    const socket = io("http://localhost:3000"); // Ganti URL dengan alamat server Anda jika berbeda
    const nim = "<%= admin.nip %>";

    // Saat terhubung, bergabung dengan room 'adminfti'
    socket.on("connect", () => {
      console.log("Connected to server");
      socket.emit("join", nim); // Emit untuk bergabung dengan room 'adminfti'
    });
    
    // Menerima notifikasi kegiatan baru
    socket.on("new_permintaan", (data) => {
      console.log("Notifikasi baru:", data);
      showNotification(data);
    });
    
    // Fungsi untuk menampilkan notifikasi di dashboard
    function showNotification(data) {
    const notificationContainer = document.getElementById("notification-container");
    const notification = document.createElement("div");
    notification.className = "notification";
    notification.innerHTML = `
      <div class="notification-title">${data.message}</div>
      <div class="notification-message">${data.permintaan.isi}</div>
      <div class="notification-timestamp">${data.permintaan.tanggal}</div>
    `;

    // Event listener untuk mengarahkan ke URL ketika notifikasi diklik
    notification.addEventListener('click', () => {
      window.location.href = data.permintaan.href;
    });

    notificationContainer.appendChild(notification);

    // Menghapus notifikasi dengan efek fade out setelah beberapa detik
    setTimeout(() => {
      notification.classList.add('notification-fade-out');
      setTimeout(() => {
        notificationContainer.removeChild(notification);
      }, 300); // Waktu transisi sesuai dengan CSS transition
    }, 5000);
  }
    </script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Data dari server (pastikan Anda menggantinya dengan data nyata)
  const permintaanDataElement = document.getElementById('permintaan-data');
  const permintaan = JSON.parse(permintaanDataElement.getAttribute('data-permintaan'));

  // Menghitung jumlah permintaan per hari
  const requestsPerDay = {};
  permintaan.forEach(item => {
    const date = item.tanggal;
    if (!requestsPerDay[date]) {
      requestsPerDay[date] = 0;
    }
    requestsPerDay[date]++;
  });

  // Menghitung jumlah permintaan berdasarkan status
  const requestsByStatus = {
    'Diajukan': 0,
    'Proses': 0,
    'Selesai': 0
  };
  permintaan.forEach(item => {
    if (requestsByStatus[item.status] !== undefined) {
      requestsByStatus[item.status]++;
    }
  });

  // Menghitung jumlah permintaan berdasarkan tujuan
  const requestsByTarget = {};
  permintaan.forEach(item => {
    const target = item.tujuan;
    if (!requestsByTarget[target]) {
      requestsByTarget[target] = 0;
    }
    requestsByTarget[target]++;
  });

  // Membuat chart jumlah permintaan per hari
  const ctx1 = document.getElementById('requestsPerDayChart').getContext('2d');
  new Chart(ctx1, {
    type: 'line',
    data: {
      labels: Object.keys(requestsPerDay),
      datasets: [{
        label: 'Requests Per Day',
        data: Object.values(requestsPerDay),
        backgroundColor: 'rgba(75, 192, 192, 0.2)',
        borderColor: 'rgba(75, 192, 192, 1)',
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });



  // Membuat chart jumlah permintaan berdasarkan tujuan
  const ctx3 = document.getElementById('requestsByTargetChart').getContext('2d');
  new Chart(ctx3, {
    type: 'pie',
    data: {
      labels: Object.keys(requestsByTarget),
      datasets: [{
        label: 'Requests By Target',
        data: Object.values(requestsByTarget),
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(153, 102, 255, 0.2)',
          'rgba(255, 159, 64, 0.2)'
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)',
          'rgba(255, 159, 64, 1)'
        ],
        borderWidth: 1
      }]
    },
    options: {
      responsive: true
    }
  });
</script>

